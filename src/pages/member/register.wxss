.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #ffffff;
  padding: 30rpx;
}

.register-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #666666;
}

/* 微信一键注册样式 */
.wechat-register {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}

.wechat-button {
  width: 100%;
  height: 90rpx;
  background-color: #07c160;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 45rpx;
  border: none;
  padding: 0;
  font-size: 34rpx;
  line-height: 1;
}

.wechat-button::after {
  border: none;
}

.divider {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx 0 20rpx;
}

.divider .line {
  height: 1px;
  flex: 1;
  background-color: #e0e0e0;
}

.divider text {
  color: #999999;
  font-size: 28rpx;
  margin: 0 20rpx;
}

.register-form {
  width: 100%;
  padding: 20rpx 0;
}

.form-item {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 30rpx 0;
  margin-bottom: 30rpx;
}

.input-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #1a78c2;
}

.input {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
}

.error-message {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.policy-agreement {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #cccccc;
  border-radius: 6rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox.checked {
  background-color: #1a78c2;
  border-color: #1a78c2;
}

.checkbox-icon {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
}

.policy-text {
  font-size: 28rpx;
  color: #666666;
  display: flex;
  flex-wrap: wrap;
}

.link {
  color: #1a78c2;
  margin: 0 6rpx;
}

.register-button {
  width: 100%;
  height: 90rpx;
  background-color: #1a78c2;
  color: #ffffff;
  font-size: 34rpx;
  border-radius: 45rpx;
  margin: 50rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}

.register-button::after {
  border: none;
}

.register-button[disabled] {
  background-color: #1a78c2;
  color: #ffffff;
  opacity: 0.8;
}

.login-option {
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  margin-top: 30rpx;
}

.login-link {
  color: #1a78c2;
  font-weight: bold;
  margin-left: 10rpx;
} 