<view class="container">
  <view class="register-header">
    <text class="title">{{i18n.title}}</text>
    <text class="subtitle">{{i18n.subtitle}}</text>
  </view>

  <!-- 微信一键注册按钮 -->
  <view class="wechat-register">
    <button 
      class="wechat-button" 
      bindtap="handleWechatRegister"
    >
      <text>{{i18n.wechatRegister}}</text>
    </button>
    <view class="divider">
      <view class="line"></view>
      <text>{{i18n.or}}</text>
      <view class="line"></view>
    </view>
  </view>

  <view class="register-form">
    <view class="form-item">
      <view class="input-icon">👤</view>
      <input 
        class="input" 
        placeholder="{{i18n.username}}" 
        value="{{username}}" 
        bindinput="onUsernameInput"
      />
    </view>

    <view class="form-item">
      <view class="input-icon">🔒</view>
      <input 
        class="input" 
        placeholder="{{i18n.password}}" 
        password="true" 
        value="{{password}}" 
        bindinput="onPasswordInput"
      />
    </view>

    <view class="form-item">
      <view class="input-icon">🔐</view>
      <input 
        class="input" 
        placeholder="{{i18n.confirmPassword}}" 
        password="true" 
        value="{{confirmPassword}}" 
        bindinput="onConfirmPasswordInput"
      />
    </view>

    <view class="form-item">
      <view class="input-icon">📱</view>
      <input 
        class="input" 
        placeholder="{{i18n.phone}}" 
        type="number" 
        maxlength="11" 
        value="{{phone}}" 
        bindinput="onPhoneInput"
      />
    </view>

    <view class="error-message" wx:if="{{errorMsg}}">
      <text>{{errorMsg}}</text>
    </view>

    <view class="policy-agreement">
      <view class="checkbox {{agreePolicy ? 'checked' : ''}}" bindtap="toggleAgreePolicy">
        <text class="checkbox-icon">{{agreePolicy ? '✓' : ''}}</text>
      </view>
      <view class="policy-text">
        <text>{{i18n.agreePolicy}}</text>
        <text class="link" bindtap="showUserAgreement">{{i18n.userAgreement}}</text>
        <text>{{i18n.and}}</text>
        <text class="link" bindtap="showPrivacyPolicy">{{i18n.privacyPolicy}}</text>
      </view>
    </view>

    <button 
      class="register-button" 
      bindtap="handleRegister" 
      loading="{{isLoading}}" 
      disabled="{{isLoading}}"
    >
      {{i18n.registerButton}}
    </button>

    <view class="login-option">
      <text>{{i18n.hasAccount}}</text>
      <text class="login-link" bindtap="navigateToLogin">{{i18n.toLogin}}</text>
    </view>
  </view>
</view> 