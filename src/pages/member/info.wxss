.container {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 30rpx;
}

.header {
  background-image: linear-gradient(135deg, #1a78c2, #56CCF2);
  padding: 40rpx 30rpx;
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  background-color: #e0e0e0;
}

.info {
  margin-left: 20rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: block;
}

.level-container {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-flex;
}

.level {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.level-icon {
  font-size: 28rpx;
  line-height: 1.2;
  vertical-align: middle;
  display: inline-flex;
  align-items: center;
}

.points {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.point-value {
  font-size: 36rpx;
  font-weight: bold;
}

.point-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.level-progress {
  background-color: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.progress-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.progress-bar {
  height: 20rpx;
  background-color: #eee;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
}

.progress-filled {
  height: 100%;
  background-image: linear-gradient(90deg, #1a78c2, #56CCF2);
  border-radius: 10rpx;
}

.progress-info {
  font-size: 24rpx;
  color: #666;
  text-align: right;
}

.level-tabs {
  display: flex;
  background-color: #fff;
  margin: 0 20rpx;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
  padding: 0 5rpx;
}

.tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 5rpx;
  color: #666;
  font-size: 24rpx;
  position: relative;
}

.tab.active {
  color: #1a78c2;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  width: 40rpx;
  height: 6rpx;
  background-color: #1a78c2;
  border-radius: 3rpx;
}

.tab-icon {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  height: 32rpx;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-text {
  line-height: 1.3;
  text-align: center;
  font-size: 24rpx;
  display: block;
  width: 100%;
  padding: 0 4rpx;
  word-wrap: break-word;
  word-break: break-all;
  min-height: 2.6em;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.level-content {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.level-card {
  border: 1rpx solid #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
}

.card-header {
  padding: 22rpx 20rpx;
  color: #333;
  position: relative;
}

.card-level {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15rpx;
  min-height: 42rpx;
}

.level-name {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1.3;
  flex: 1;
  margin-right: 15rpx;
  word-wrap: break-word;
  word-break: break-all;
  padding-right: 10rpx;
}

.level-icon {
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  height: 32rpx;
  flex-shrink: 0;
  margin-left: auto;
}

.level-condition {
  font-size: 24rpx;
  opacity: 0.8;
  line-height: 1.4;
  display: block;
  margin-top: 5rpx;
}

.benefits-list {
  padding: 20rpx;
}

.benefit-item {
  display: flex;
  align-items: flex-start;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.benefit-item:last-child {
  border-bottom: none;
}

.benefit-icon {
  width: 36rpx;
  height: 36rpx;
  min-width: 36rpx;
  background-color: #1a78c2;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 15rpx;
  margin-top: 4rpx;
}

.benefit-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  flex: 1;
  word-wrap: break-word;
  word-break: normal;
}

.level-rules {
  background-color: #fff;
  margin: 0 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.rules-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.rules-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  width: 8rpx;
  height: 28rpx;
  background-color: #1a78c2;
  border-radius: 4rpx;
}

.rules-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.rule-item {
  margin-bottom: 10rpx;
} 