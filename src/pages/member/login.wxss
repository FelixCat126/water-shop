.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #ffffff;
  padding: 30rpx;
  align-items: center;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  margin-bottom: 60rpx;
  width: 100%;
  text-align: center;
}

.logo-text {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #1a78c2, #07c160);
  color: #ffffff;
  font-size: 80rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(26, 120, 194, 0.3);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #666666;
}

.login-form {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form-item {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 30rpx 0;
  margin-bottom: 30rpx;
  width: 100%;
}

.input-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #1a78c2;
}

.input {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
}

.error-message {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  text-align: center;
  width: 100%;
}

.login-button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #1a78c2;
  color: #ffffff;
  font-size: 34rpx;
  border-radius: 45rpx;
  margin: 40rpx 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.login-button::after {
  border: none;
}

.login-button[disabled] {
  background-color: #1a78c2;
  color: #ffffff;
  opacity: 0.8;
}

.wechat-button {
  width: 100%;
  height: 90rpx;
  background-color: #07c160;
  color: #ffffff;
  font-size: 34rpx;
  border-radius: 45rpx;
  margin-bottom: 30rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-button::after {
  border: none;
}

.wechat-button-inner {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.wechat-text {
  line-height: 1;
  text-align: center;
}

.login-text-options {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.option {
  color: #666666;
  font-size: 28rpx;
}

.register {
  color: #1a78c2;
  font-weight: bold;
}

.login-footer {
  margin-top: auto;
  text-align: center;
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

.login-policy {
  font-size: 24rpx;
  color: #999999;
  margin: 0 4rpx;
}

.login-policy-link {
  font-size: 24rpx;
  color: #1a78c2;
} 