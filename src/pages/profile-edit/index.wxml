<view class="container">
  <view class="profile-edit">
    <!-- 头像编辑 -->
    <view class="edit-section">
      <view class="edit-item avatar-item" bindtap="chooseAvatar">
        <text class="label">{{i18n.avatar || '头像'}}</text>
        <view class="value">
          <image class="avatar" src="{{avatarUrl || '/assets/images/profile/default-avatar.svg'}}" mode="aspectFill"></image>
          <text class="arrow">›</text>
        </view>
      </view>
    </view>

    <!-- 基本信息 -->
    <view class="edit-section">
      <view class="edit-item">
        <text class="label">{{i18n.nickname || '昵称'}}</text>
        <input 
          class="input" 
          placeholder="{{i18n.nicknamePlaceholder || '请输入昵称'}}"
          value="{{nickName}}"
          bindinput="onNickNameInput"
          maxlength="20"
        />
      </view>

      <view class="edit-item">
        <text class="label">{{i18n.phone || '手机号'}}</text>
        <view class="value phone-value">
          <!-- 未绑定手机号时，只显示绑定按钮 -->
          <button 
            wx:if="{{!phone}}" 
            class="bind-phone-btn"
            open-type="getPhoneNumber"
            bindgetphonenumber="getPhoneNumber"
          >
            {{i18n.bindPhone || '绑定'}}
          </button>
          
          <!-- 已绑定手机号时，显示手机号和更换按钮 -->
          <view wx:else class="phone-display">
            <text class="phone-text">{{phone}}</text>
            <button 
              class="change-phone-btn"
              open-type="getPhoneNumber"
              bindgetphonenumber="getPhoneNumber"
            >
              {{i18n.changePhone || '更换'}}
            </button>
          </view>
        </view>
      </view>

      <view class="edit-item" bindtap="showGenderPicker">
        <text class="label">{{i18n.gender || '性别'}}</text>
        <view class="value">
          <text class="{{gender ? '' : 'placeholder'}}">{{genderText || i18n.selectGender || '请选择'}}</text>
          <text class="arrow">›</text>
        </view>
      </view>

      <view class="edit-item" bindtap="showBirthdayPicker">
        <text class="label">{{i18n.birthday || '生日'}}</text>
        <view class="value">
          <text class="{{birthday ? '' : 'placeholder'}}">{{birthdayDisplay || i18n.selectBirthday || '请选择'}}</text>
          <text class="arrow">›</text>
        </view>
      </view>
    </view>

    <!-- 其他信息 -->
    <view class="edit-section">
      <view class="edit-item">
        <text class="label">{{i18n.email || '邮箱'}}</text>
        <input 
          class="input" 
          placeholder="{{i18n.emailPlaceholder || '请输入邮箱'}}"
          value="{{email}}"
          bindinput="onEmailInput"
          type="email"
        />
      </view>
    </view>

    <!-- 保存按钮 -->
    <view class="save-button-wrapper">
      <button 
        class="save-button" 
        bindtap="saveProfile"
        loading="{{isLoading}}"
        disabled="{{isLoading}}"
      >
        {{i18n.save || '保存'}}
      </button>
    </view>
  </view>

  <!-- 自定义生日选择器 -->
  <view class="birthday-picker-overlay" wx:if="{{showBirthdayPicker}}" bindtap="hideBirthdayPicker">
    <view class="birthday-picker-content" catchtap>
      <view class="picker-header">
        <text class="picker-cancel" bindtap="hideBirthdayPicker">{{i18n.cancel || '取消'}}</text>
        <text class="picker-title">{{i18n.selectBirthday || '请选择生日'}}</text>
        <text class="picker-confirm" bindtap="confirmBirthday">{{i18n.confirm || '确定'}}</text>
      </view>
      <picker-view class="picker-view" value="{{pickerValue}}" bindchange="onPickerChange">
        <picker-view-column>
          <view wx:for="{{years}}" wx:key="*this" class="picker-item">
            {{item}}
          </view>
        </picker-view-column>
        <picker-view-column>
          <view wx:for="{{months}}" wx:key="*this" class="picker-item">
            {{item}}
          </view>
        </picker-view-column>
        <picker-view-column>
          <view wx:for="{{days}}" wx:key="*this" class="picker-item">
            {{item}}
          </view>
        </picker-view-column>
      </picker-view>
    </view>
  </view>

  <!-- 自定义性别选择器 -->
  <view class="gender-picker-overlay" wx:if="{{showGenderPicker}}" bindtap="hideGenderPicker">
    <view class="gender-picker-content" catchtap>
      <view class="picker-header">
        <text class="picker-cancel" bindtap="hideGenderPicker">{{i18n.cancel || '取消'}}</text>
        <text class="picker-title">{{i18n.selectGender || '请选择性别'}}</text>
        <text class="picker-confirm" bindtap="confirmGender">{{i18n.confirm || '确定'}}</text>
      </view>
      <view class="gender-options">
        <view 
          wx:for="{{genderOptions}}" 
          wx:key="value" 
          class="gender-option {{selectedGenderIndex === index ? 'selected' : ''}}"
          bindtap="selectGenderOption"
          data-index="{{index}}"
        >
          {{item.text}}
        </view>
      </view>
    </view>
  </view>
</view> 