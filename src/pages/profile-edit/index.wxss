.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.profile-edit {
  padding-bottom: 40rpx;
}

/* 编辑区块 */
.edit-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

/* 编辑项 */
.edit-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  min-height: 100rpx;
}

.edit-item:last-child {
  border-bottom: none;
}

/* 头像编辑项 */
.avatar-item {
  padding: 40rpx 30rpx;
}

/* 标签 */
.label {
  width: 160rpx;
  font-size: 30rpx;
  color: #333;
  flex-shrink: 0;
}

/* 值区域 */
.value {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* 头像 */
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

/* 输入框 */
.input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  text-align: right;
}

/* 文本域 */
.textarea {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  min-height: 120rpx;
  text-align: left;
}

/* 占位符样式 */
.placeholder {
  color: #999;
}

/* 箭头 */
.arrow {
  font-size: 36rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 手机号值容器 */
.phone-value {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.phone-text {
  flex: 1;
  color: #666;
}

/* 已绑定手机号的显示容器 */
.phone-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.phone-display .phone-text {
  flex: 1;
  color: #333;
  font-size: 30rpx;
}

/* 绑定手机号按钮 */
.bind-phone-btn {
  background: linear-gradient(135deg, #1a78c2 0%, #4a9eff 100%) !important;
  color: white !important;
  border: none !important;
  border-radius: 20rpx !important;
  padding: 0 20rpx !important;
  font-size: 28rpx !important;
  min-width: 80rpx;
  max-width: 150rpx;
  height: 60rpx !important;
  line-height: 60rpx !important;
  text-align: center !important;
  box-shadow: 0 4rpx 12rpx rgba(26, 120, 194, 0.3) !important;
  transition: all 0.3s ease;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  margin: 0 !important;
  margin-left: auto !important;
  flex-shrink: 0;
  position: relative;
}

/* 居中显示的绑定按钮 */
.bind-phone-btn.centered {
  margin: 0;
}

.bind-phone-btn::after {
  border: none;
}

.bind-phone-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(26, 120, 194, 0.4);
}

/* 更换手机号按钮 */
.change-phone-btn {
  background: linear-gradient(135deg, #ff9a56 0%, #ffad56 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  min-width: 80rpx;
  max-width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  margin-left: 20rpx;
  box-shadow: 0 3rpx 10rpx rgba(255, 154, 86, 0.3);
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.change-phone-btn::after {
  border: none;
}

.change-phone-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(255, 154, 86, 0.4);
}

/* 保存按钮容器 */
.save-button-wrapper {
  padding: 60rpx 30rpx;
}

/* 保存按钮 */
.save-button {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-button[disabled] {
  opacity: 0.6;
}

/* 性别选择器样式 */
.gender-picker {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 1000;
}

.gender-option {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
}

.gender-option:active {
  background: #f5f5f5;
}

/* 自定义生日选择器样式 */
.birthday-picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.birthday-picker-content {
  width: 100%;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80vh;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.picker-cancel {
  font-size: 32rpx;
  color: #999;
}

.picker-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.picker-confirm {
  font-size: 32rpx;
  color: #007aff;
  font-weight: 500;
}

.picker-view {
  height: 500rpx;
  width: 100%;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  font-size: 32rpx;
  color: #333;
}

/* 性别选择器样式 */
.gender-picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.gender-picker-content {
  width: 100%;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 60vh;
}

.gender-options {
  padding: 20rpx 0;
}

.gender-option {
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

.gender-option:last-child {
  border-bottom: none;
}

.gender-option.selected {
  color: #007aff;
  background: #f0f8ff;
}

.gender-option:active {
  background: #f5f5f5;
} 