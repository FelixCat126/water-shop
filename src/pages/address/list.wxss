.address-list {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 150rpx;
  padding-top: 20rpx; /* 恢复正常顶部边距 */
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-container image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-container text {
  color: #999;
  font-size: 28rpx;
}

.address-item {
  background: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.info {
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.user-info {
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.name {
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.phone {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.tag {
  font-size: 22rpx;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
  padding: 0 10rpx;
  border-radius: 6rpx;
}

.address {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.actions {
  display: flex;
  margin-top: 20rpx;
  justify-content: flex-end;
}

.action-item {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  color: #666;
  font-size: 26rpx;
}

/* 替换iconfont图标为图片样式 */
.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 5rpx;
}

.add-btn {
  position: fixed;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  height: 90rpx;
  background: #0084ff;
  color: #fff;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 132, 255, 0.2);
}

.add-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

/* 自定义导航栏样式 */
.custom-nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding-top: 44rpx; /* 适配iPhone状态栏 */
  background-image: linear-gradient(135deg, #1a78c2, #56CCF2); /* 使用与全局一致的渐变 */
  color: #fff;
  display: flex;
  align-items: center;
  z-index: 999;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1); /* 添加阴影效果 */
}

.nav-back {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-back {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #fff;
  border-left: 4rpx solid #fff;
  transform: rotate(-45deg);
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx; /* 调整为全局标题字体大小 */
  font-weight: 500;
} 