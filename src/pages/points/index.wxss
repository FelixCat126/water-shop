.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  background-color: #0084ff;
  padding: 30rpx;
  color: #ffffff;
  position: relative;
}

.points-balance {
  text-align: center;
  margin-bottom: 30rpx;
}

.points-balance .label {
  font-size: 28rpx;
  opacity: 0.8;
}

.points-balance .value {
  font-size: 60rpx;
  font-weight: bold;
  margin-top: 10rpx;
  display: block;
}

.points-card {
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.card-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  opacity: 0.2;
}

.card-content {
  position: relative;
  z-index: 1;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.level {
  font-size: 24rpx;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
  vertical-align: middle;
}

.points-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.points-label {
  font-size: 28rpx;
  opacity: 0.8;
}

.points-value {
  font-size: 36rpx;
  font-weight: bold;
}

.tabs {
  display: flex;
  background-color: #ffffff;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}

.tab-item.active {
  color: #0084ff;
  font-weight: bold;
}

.tab-item.active:after {
  content: '';
  display: block;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #0084ff;
}

.content {
  padding: 30rpx;
}

.records, .ways, .exchange {
  min-height: 400rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

.record-list {
  background-color: #ffffff;
  border-radius: 10rpx;
  overflow: hidden;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  display: flex;
  flex-direction: column;
}

.record-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999999;
}

.record-points {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.record-points.increase {
  color: #0084ff;
}

/* 赚积分途径样式优化 */
.way-item {
  display: flex;
  align-items: flex-start;
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.way-icon-container {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  background-color: rgba(0, 132, 255, 0.1);
  border-radius: 50%;
  flex-shrink: 0;
}

.way-icon {
  width: 50rpx;
  height: 50rpx;
}

.way-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-right: 10rpx;
}

.way-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.way-desc {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
  display: block;
}

.way-points {
  font-size: 28rpx;
  color: #0084ff;
  font-weight: bold;
  margin-left: 10rpx;
  flex-shrink: 0;
  min-width: 120rpx;
  text-align: right;
} 