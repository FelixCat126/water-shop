.product-list-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 分类和排序导航样式 */
.filter-section {
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.category-scroll {
  white-space: nowrap;
  border-bottom: 1rpx solid #eee;
}

.category-list {
  display: inline-block;
  padding: 0 20rpx;
}

.category-item {
  display: inline-block;
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.category-item.active {
  color: #0088cc;
  font-weight: 500;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #0088cc;
  border-radius: 2rpx;
}

.sort-section {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.sort-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  position: relative;
}

.sort-item.active {
  color: #0088cc;
  font-weight: 500;
}

/* 商品列表样式 */
.product-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  justify-content: space-between;
}

.product-item {
  width: 345rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.product-tag {
  position: absolute;
  top: 16rpx;
  left: 0;
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  color: #fff;
  border-radius: 0 20rpx 20rpx 0;
  z-index: 10;
}

.product-tag.hot {
  background-color: #ff4d4f;
}

.product-tag.new {
  background-color: #52c41a;
}

.product-tag.discount {
  background-color: #ff9500;
}

.product-image {
  width: 100%;
  height: 300rpx;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-sales {
  flex: 1;
}

.product-price {
  font-size: 30rpx;
  color: #ff6b00;
  font-weight: 500;
  margin-right: 10rpx;
}

.product-sales {
  font-size: 22rpx;
  color: #999;
}

.add-cart-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #0088cc;
  color: #fff;
  border-radius: 50%;
}

.cart-icon {
  width: 30rpx;
  height: 30rpx;
}

.cart-icon-text {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多区域样式 */
.load-more {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-icon-small {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.no-more {
  color: #999;
  font-size: 24rpx;
  text-align: center;
} 

