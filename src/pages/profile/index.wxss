.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

/* 用户信息区域 */
.user-info-section {
  background-image: linear-gradient(135deg, #1a78c2, #56CCF2);
  padding: 40rpx 30rpx;
  color: #fff;
  margin-bottom: 20rpx;
}

.user-header {
  display: flex;
  align-items: center;
  position: relative;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #fff;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  object-fit: cover;
}

.user-detail {
  margin-left: 30rpx;
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: block;
}

.login-hint {
  font-size: 24rpx;
  opacity: 0.8;
}

.member-level-container {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  opacity: 0.9;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-flex;
  margin-top: 8rpx;
}

.member-level {
  margin-right: 6rpx;
}

.member-level-icon {
  font-size: 26rpx;
}

.logout-btn {
  font-size: 24rpx;
  background-color: rgba(0, 0, 0, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}

/* 会员资产 */
.user-assets {
  display: flex;
  margin-top: 30rpx;
}

.asset-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.asset-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 15rpx;
  height: 40rpx;
  width: 1rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

.asset-value {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.asset-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 订单区域 */
.orders-section {
  background-color: #fff;
  border-radius: 12rpx;
  margin: 0 20rpx 20rpx;
  padding: 0 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.view-all {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.arrow {
  width: 12rpx;
  height: 12rpx;
  border-top: 2rpx solid #999;
  border-right: 2rpx solid #999;
  transform: rotate(45deg);
  margin-left: 10rpx;
}

.order-icons {
  display: flex;
  padding: 30rpx 0 10rpx;
  justify-content: space-around;
}

.order-icon-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.icon-wrapper {
  position: relative;
  margin-bottom: 15rpx;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.order-icon-text {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #ff6b00;
  color: #fff;
  font-size: 20rpx;
  min-width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  text-align: center;
  line-height: 30rpx;
  padding: 0 8rpx;
  box-sizing: border-box;
}

.icon-text {
  font-size: 24rpx;
  color: #666;
  width: 100%;
  text-align: center;
  display: block;
}

/* 菜单区域 */
.menu-section {
  background-color: #fff;
  border-radius: 12rpx;
  margin: 0 20rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon-wrapper {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(26, 120, 194, 0.1);
  border-radius: 50%;
}

.menu-icon-text {
  font-size: 32rpx;
  color: #1a78c2;
  font-weight: bold;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 底部版本信息 */
.footer {
  text-align: center;
  padding: 40rpx 0;
}

.version {
  font-size: 24rpx;
  color: #999;
} 