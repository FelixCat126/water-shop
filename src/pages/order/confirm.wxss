.order-confirm {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 300rpx;
  padding: 60rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #0088cc;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.address-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.address-left {
  flex: 1;
  display: flex;
  align-items: center;
}

.address-right {
  margin-left: 20rpx;
}

.change-address-btn {
  padding: 8rpx 16rpx;
  background-color: rgba(0, 136, 204, 0.1);
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #0088cc;
}

.address-info {
  flex: 1;
}

.address-info .top {
  margin-bottom: 10rpx;
}

.address-info .user-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.address-info .name {
  font-size: 32rpx;
  font-weight: 500;
  margin-right: 20rpx;
}

.address-info .phone {
  font-size: 28rpx;
  color: #666;
}

.address-info .address {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  max-width: 100%;
}

.no-address {
  color: #999;
  font-size: 28rpx;
}

.arrow {
  font-size: 36rpx;
  color: #999;
  margin-left: 20rpx;
}

.goods-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.goods-list .goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.goods-list .goods-item:last-child {
  border-bottom: none;
}

.goods-list .goods-item image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.goods-list .goods-item .goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-list .goods-item .goods-info .name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.goods-list .goods-item .goods-info .spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.goods-list .goods-item .goods-info .price-row {
  display: flex;
  justify-content: space-between;
}

.goods-list .goods-item .goods-info .price-row .price {
  font-size: 30rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.goods-list .goods-item .goods-info .price-row .quantity {
  font-size: 26rpx;
  color: #999;
}

.delivery-section, .payment-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.delivery-options {
  display: flex;
  flex-wrap: wrap;
}

.delivery-options .option,
.payment-options .option {
  min-width: 180rpx;
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 1.4;
  text-align: center;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  word-break: break-word;
}

.delivery-options .option.active,
.payment-options .option.active {
  border-color: #0088cc;
  color: #0088cc;
}

.delivery-options .option .price {
  font-size: 22rpx;
  margin-left: 8rpx;
  color: #999;
}

.delivery-options .option.active .price {
  color: #0088cc;
}

.payment-options {
  display: flex;
  flex-wrap: wrap;
}

.remark-section {
  background: #fff;
  padding: 30rpx;
}

.remark-section textarea {
  width: 100%;
  height: 200rpx;
  background: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.footer .total {
  flex: 1;
  font-size: 28rpx;
  text-align: left;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

.footer .total .price {
  color: #ff4d4f;
  font-size: 36rpx;
  font-weight: bold;
}

.footer .submit {
  min-width: 200rpx;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #0088cc;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  white-space: normal;
  word-break: break-word;
}

.footer .submit:active {
  background: #005a9e;
}

/* 优惠券选择样式 */
.coupon-section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.coupon-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.coupon-info {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.coupon-name {
  font-size: 28rpx;
  color: #333;
}

.coupon-discount {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
}

.coupon-placeholder {
  font-size: 28rpx;
  color: #999;
}

.coupon-count {
  font-size: 24rpx;
  color: #ff6b35;
}

.arrow {
  font-size: 28rpx;
  color: #ccc;
  margin-left: 20rpx;
}

/* 底部价格详情样式 */

.price-detail {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 8rpx;
  gap: 20rpx;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.discount-info {
  font-size: 24rpx;
  color: #ff6b35;
}

.final-price {
  display: flex;
  align-items: center;
}

/* 优惠券弹窗样式 */
.coupon-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80%;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 0 30rpx;
}

.coupon-list {
  padding: 20rpx 0;
}

.coupon-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
  border-radius: 12rpx;
  color: #fff;
  position: relative;
}

.coupon-item::after {
  content: '';
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 30rpx;
  height: 30rpx;
  background: #fff;
  border-radius: 50%;
}

.coupon-item.selected {
  border: 3rpx solid #0088cc;
  box-shadow: 0 0 20rpx rgba(0, 136, 204, 0.3);
}

.coupon-item.selected::after {
  content: '✓';
  background: #0088cc;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

.coupon-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
  min-width: 120rpx;
}

.coupon-amount {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.coupon-condition {
  font-size: 20rpx;
  opacity: 0.8;
}

.coupon-right {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.coupon-right .coupon-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #fff;
}

.coupon-desc {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 10rpx;
}

.coupon-expire {
  font-size: 20rpx;
  opacity: 0.6;
}

.no-coupon {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.modal-btn:active {
  background: #e0e0e0;
}