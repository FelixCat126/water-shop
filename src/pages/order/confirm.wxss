.order-confirm {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 300rpx;
  padding: 60rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #0088cc;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.address-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.address-left {
  flex: 1;
  display: flex;
  align-items: center;
}

.address-right {
  margin-left: 20rpx;
}

.change-address-btn {
  padding: 8rpx 16rpx;
  background-color: rgba(0, 136, 204, 0.1);
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #0088cc;
}

.address-info {
  flex: 1;
}

.address-info .top {
  margin-bottom: 10rpx;
}

.address-info .user-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.address-info .name {
  font-size: 32rpx;
  font-weight: 500;
  margin-right: 20rpx;
}

.address-info .phone {
  font-size: 28rpx;
  color: #666;
}

.address-info .address {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.no-address {
  color: #999;
  font-size: 28rpx;
}

.arrow {
  font-size: 36rpx;
  color: #999;
  margin-left: 20rpx;
}

.goods-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.goods-list .goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.goods-list .goods-item:last-child {
  border-bottom: none;
}

.goods-list .goods-item image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.goods-list .goods-item .goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-list .goods-item .goods-info .name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.goods-list .goods-item .goods-info .spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.goods-list .goods-item .goods-info .price-row {
  display: flex;
  justify-content: space-between;
}

.goods-list .goods-item .goods-info .price-row .price {
  font-size: 30rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.goods-list .goods-item .goods-info .price-row .quantity {
  font-size: 26rpx;
  color: #999;
}

.delivery-section, .payment-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.delivery-options {
  display: flex;
  flex-wrap: wrap;
}

.delivery-options .option,
.payment-options .option {
  min-width: 180rpx;
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 1.4;
  text-align: center;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  word-break: break-word;
}

.delivery-options .option.active,
.payment-options .option.active {
  border-color: #0088cc;
  color: #0088cc;
}

.delivery-options .option .price {
  font-size: 22rpx;
  margin-left: 8rpx;
  color: #999;
}

.delivery-options .option.active .price {
  color: #0088cc;
}

.payment-options {
  display: flex;
  flex-wrap: wrap;
}

.remark-section {
  background: #fff;
  padding: 30rpx;
}

.remark-section textarea {
  width: 100%;
  height: 200rpx;
  background: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.footer .total {
  flex: 1;
  font-size: 28rpx;
}

.footer .total .price {
  color: #ff4d4f;
  font-size: 36rpx;
  font-weight: bold;
}

.footer .submit {
  min-width: 200rpx;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #0088cc;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  white-space: normal;
  word-break: break-word;
} 