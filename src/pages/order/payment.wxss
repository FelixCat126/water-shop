.payment {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.amount-section {
  background: #fff;
  padding: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.amount-section .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.amount-section .amount {
  font-size: 60rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.payment-methods, .order-info {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.methods-list .method-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.methods-list .method-item:last-child {
  border-bottom: none;
}

.methods-list .method-item.active .checkbox {
  border-color: #ff4d4f;
}

.method-info {
  display: flex;
  align-items: center;
}

.method-info image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.method-info text {
  font-size: 28rpx;
  color: #333;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 1rpx solid #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
}

.checkbox .inner {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #ff4d4f;
}

.info-list .info-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
}

.info-list .info-item .label {
  color: #666;
  font-size: 26rpx;
}

.info-list .info-item .value {
  color: #333;
  font-size: 26rpx;
}

.info-list .info-item .value.highlight {
  color: #ff4d4f;
  font-weight: bold;
}

.info-list .info-item .value.discount {
  color: #52c41a;
}

.info-list .info-item .value.shipping {
  color: #ff4d4f;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.footer .pay-btn {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #ff4d4f;
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
} 