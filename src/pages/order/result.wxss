.result {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
  min-height: 100vh;
  background: #fff;
}

.result-icon {
  margin-bottom: 40rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.result-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 60rpx;
}

.order-info {
  width: 100%;
  background: #f5f5f5;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 60rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
}

.info-item .label {
  color: #666;
  font-size: 28rpx;
}

.info-item .value {
  color: #333;
  font-size: 28rpx;
}

.info-item .value.price {
  color: #ff4d4f;
  font-weight: bold;
}

.btn-area {
  width: 100%;
  display: flex;
  justify-content: center;
}

.btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  margin: 0 20rpx;
  font-size: 28rpx;
}

.btn.primary {
  background: #ff4d4f;
  color: #fff;
}

.btn.default {
  background: #f5f5f5;
  color: #666;
} 