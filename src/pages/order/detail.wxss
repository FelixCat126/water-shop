.order-detail {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.status-section {
  padding: 40rpx 30rpx;
  color: #fff;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.status-desc {
  font-size: 28rpx;
}

.address-section, .order-info-section, .goods-section, .price-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.address-info .user-info {
  margin-bottom: 10rpx;
}

.address-info .user-info .name {
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.address-info .user-info .phone {
  color: #666;
  font-size: 28rpx;
}

.address-info .address {
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
}

.order-info-section .info-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
}

.order-info-section .info-item .label {
  color: #666;
  font-size: 28rpx;
}

.order-info-section .info-item .value {
  color: #333;
  font-size: 28rpx;
}

.goods-list .goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.goods-list .goods-item:last-child {
  border-bottom: none;
}

.goods-list .goods-item image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.goods-list .goods-item .goods-info {
  flex: 1;
}

.goods-list .goods-item .goods-info .name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.goods-list .goods-item .goods-info .spec {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.goods-list .goods-item .goods-info .price-row {
  display: flex;
  justify-content: space-between;
}

.goods-list .goods-item .goods-info .price-row .price {
  color: #ff4d4f;
  font-size: 30rpx;
  font-weight: bold;
}

.goods-list .goods-item .goods-info .price-row .quantity {
  color: #999;
  font-size: 26rpx;
}

.price-section {
  font-size: 28rpx;
}

.price-section .price-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
}

.price-section .price-item.total {
  margin-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 20rpx;
}

.price-section .price-item.total .label,
.price-section .price-item.total .value {
  font-weight: bold;
  font-size: 32rpx;
}

.price-section .price-item .label {
  color: #666;
}

.price-section .price-item .value {
  color: #333;
}

.price-section .price-item .value.coupon-name {
  color: #52c41a;
  font-weight: 500;
}

.price-section .price-item .value.discount-amount {
  color: #52c41a;
  font-weight: 500;
}

.price-section .price-item.total .value {
  color: #ff4d4f;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.footer .btn-group {
  display: flex;
  justify-content: flex-end;
}

.footer .btn {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  border-radius: 40rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.footer .btn-default {
  background: #f5f5f5;
  color: #666;
}

.footer .btn-cancel {
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

.footer .btn-primary {
  background: #ff4d4f;
  color: #fff;
}