.article-list-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

/* 分类导航样式 */
.category-scroll {
  background-color: #fff;
  white-space: nowrap;
  position: sticky;
  top: 0;
  z-index: 10;
  border-bottom: 1rpx solid #eee;
}

.category-list {
  display: flex;
  padding: 0 20rpx;
}

.category-item {
  display: inline-block;
  padding: 30rpx 40rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  flex-shrink: 0;
}

.category-item.active {
  color: #0088cc;
  font-weight: 500;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #0088cc;
  border-radius: 2rpx;
}

/* 文章列表样式 */
.article-list {
  padding: 20rpx;
}

.article-item {
  display: flex;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.article-image {
  width: 240rpx;
  height: 180rpx;
  flex-shrink: 0;
}

.article-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.article-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.article-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.article-date {
  font-size: 24rpx;
  color: #999;
}

.article-views {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.article-views .iconfont {
  margin-right: 6rpx;
}

.article-view-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.article-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag-item {
  font-size: 22rpx;
  color: #0088cc;
  background-color: rgba(0, 136, 204, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
  margin-bottom: 6rpx;
}

/* 加载更多样式 */
.loading-section {
  padding: 30rpx 0;
  text-align: center;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

.loading-more {
  color: #0088cc;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
} 