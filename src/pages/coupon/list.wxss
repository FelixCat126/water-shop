.coupon {
  min-height: 100vh;
  background: #f5f5f5;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 0;
  position: relative;
}

.tab-item.active {
  color: #ff4d4f;
  font-weight: bold;
}

.tab-item.active:after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #ff4d4f;
  border-radius: 2rpx;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-container image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-container text {
  color: #999;
  font-size: 28rpx;
}

.coupon-list {
  padding: 20rpx;
}

.coupon-item {
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  position: relative;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.coupon-item:before {
  content: '';
  position: absolute;
  left: 180rpx;
  top: 0;
  bottom: 0;
  width: 0;
  border-left: 2rpx dashed #f5f5f5;
}

.coupon-item.expired, .coupon-item.used {
  background: #f5f5f5;
}

.coupon-item.expired .left, .coupon-item.used .left,
.coupon-item.expired .right, .coupon-item.used .right {
  opacity: 0.6;
}

.left {
  width: 180rpx;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #ff4d4f;
  color: #fff;
  position: relative;
}

.price {
  display: flex;
  align-items: flex-start;
}

.symbol {
  font-size: 30rpx;
  margin-top: 6rpx;
}

.value {
  font-size: 60rpx;
  font-weight: bold;
}

.condition {
  font-size: 24rpx;
  margin-top: 10rpx;
}

.right {
  flex: 1;
  padding: 20rpx;
  position: relative;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.date, .scope {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.btn {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #ff4d4f;
  color: #fff;
  border-radius: 30rpx;
  font-size: 24rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}

.status-tag {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.corner {
  position: absolute;
  right: 0;
  top: 0;
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 0 40rpx 40rpx 0;
  border-color: transparent #ff4d4f transparent transparent;
  opacity: 0.8;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  width: 100%;
}

.loading {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
}

.error-container image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.error-container text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.error-container .btn {
  font-size: 28rpx;
  color: #ffffff;
  background-color: #1890ff;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
} 